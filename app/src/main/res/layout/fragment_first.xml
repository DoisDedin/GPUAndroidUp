<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_run_all"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_run_all"
            android:backgroundTint="@color/fft_tflite_color"
            android:textColor="@color/white"
            android:textAllCaps="false" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:max="12" />

        <TextView
            android:id="@+id/progress_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/progress_idle"
            android:visibility="gone"
            android:paddingTop="4dp"
            android:textAppearance="?attr/textAppearanceBody2" />

        <TextView
            android:id="@+id/text_mad_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/section_mad_single"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_mad_cpu_single"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/mad_cpu_color"
            android:text="@string/btn_mad_cpu_single"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_mad_tflite_cpu_single"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/mad_tflite_cpu_color"
            android:text="@string/btn_mad_tflite_cpu_single"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_mad_tflite_gpu_single"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/mad_tflite_gpu_color"
            android:text="@string/btn_mad_tflite_gpu_single"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_mad_tflite_nn_single"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/mad_tflite_nn_color"
            android:text="@string/btn_mad_tflite_nn_single"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/text_mad_batch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/section_mad_batch"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_mad_cpu_batch"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/mad_cpu_color"
            android:text="@string/btn_mad_cpu_batch"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_mad_tflite_cpu_batch"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/mad_tflite_cpu_color"
            android:text="@string/btn_mad_tflite_cpu_batch"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_mad_tflite_gpu_batch"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/mad_tflite_gpu_color"
            android:text="@string/btn_mad_tflite_gpu_batch"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_mad_tflite_nn_batch"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/mad_tflite_nn_color"
            android:text="@string/btn_mad_tflite_nn_batch"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/text_fft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/section_fft"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_fft_cpu"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/fft_cpu_color"
            android:text="@string/btn_fft_cpu"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_fft_tflite_cpu"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/fft_tflite_color"
            android:text="@string/btn_fft_tflite_cpu"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_fft_tflite_gpu"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/mad_tflite_gpu_color"
            android:text="@string/btn_fft_tflite_gpu"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_fft_tflite_nn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/mad_tflite_nn_color"
            android:text="@string/btn_fft_tflite_nn"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_share_logs"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/logs_share_color"
            android:text="@string/btn_share_logs"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_clear_logs"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/logs_clear_color"
            android:text="@string/btn_clear_logs"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
