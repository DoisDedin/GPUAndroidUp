<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <Button
            android:id="@+id/button_ziro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rodar CPU"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_gpu"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rodar na CPU-OPTIMIZE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_gpu"
            app:layout_constraintTop_toBottomOf="@id/button_ziro" />

        <Button
            android:id="@+id/button_gpu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rodar na GPU"
            app:layout_constraintTop_toBottomOf="@id/button_first"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_np"/>

        <Button
            android:id="@+id/button_np"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rodar com NumPy"
            app:layout_constraintTop_toBottomOf="@id/button_gpu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_fft_cpu"/>

        <Button
            android:id="@+id/button_fft_cpu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FFT CPU (10Ã—4096)"
            app:layout_constraintTop_toBottomOf="@id/button_np"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/button_fft_cpu_delegate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FFT Lite CPU"
            app:layout_constraintTop_toBottomOf="@id/button_fft_cpu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/button_fft_gpu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FFT Lite GPU"
            app:layout_constraintTop_toBottomOf="@id/button_fft_cpu_delegate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/button_fft_nnapi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FFT Lite NNAPI"
            app:layout_constraintTop_toBottomOf="@id/button_fft_gpu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
